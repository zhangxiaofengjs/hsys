	<insert id="addUserGroup">
    	insert into user_group_tbl (
    		c_user_id,
    		c_group_id)
    	values (
    		#{userId},
    		#{groupId}
    	)
    </insert>
 
	<update id="updateUserGroup">
    	update user_group_tbl
		<set>
			c_group_id = #{groupId},
		</set>
    	<where>
			c_user_id = #{userId}
		</where>
    </update>
